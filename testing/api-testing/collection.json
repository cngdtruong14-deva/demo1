{
  "info": {
    "name": "Smart Restaurant API Collection",
    "description": "Postman/Newman collection for API testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"branch_id\": \"branch-001\",\n  \"table_id\": \"table-001\",\n  \"items\": [\n    {\n      \"menu_item_id\": \"item-001\",\n      \"quantity\": 2,\n      \"notes\": \"No spicy\"\n    }\n  ],\n  \"payment_method\": \"qr\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders/:orderId",
              "host": ["{{base_url}}"],
              "path": ["orders", ":orderId"],
              "variable": [
                {
                  "key": "orderId",
                  "value": "order-001"
                }
              ]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\",\n  \"notes\": \"Started cooking\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/:orderId/status",
              "host": ["{{base_url}}"],
              "path": ["orders", ":orderId", "status"],
              "variable": [
                {
                  "key": "orderId",
                  "value": "order-001"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get Menu",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/menu/:branchId",
              "host": ["{{base_url}}"],
              "path": ["menu", ":branchId"],
              "variable": [
                {
                  "key": "branchId",
                  "value": "branch-001"
                }
              ]
            }
          }
        },
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products?branch_id={{branchId}}",
              "host": ["{{base_url}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "branch_id",
                  "value": "{{branchId}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Tables",
      "item": [
        {
          "name": "Get Table",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tables/:tableId",
              "host": ["{{base_url}}"],
              "path": ["tables", ":tableId"],
              "variable": [
                {
                  "key": "tableId",
                  "value": "table-001"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1"
    },
    {
      "key": "branchId",
      "value": "branch-001"
    }
  ]
}

