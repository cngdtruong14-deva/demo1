# ============================================
# QR Order Platform - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# cp env.example .env

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=5000
APP_NAME=QR Order Platform
APP_URL=http://localhost:5000

# ============================================
# Database Configuration (MySQL)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=qr_order_db
DB_USER=root
DB_PASSWORD=your_password_here
DB_ROOT_PASSWORD=root_password_here

# Database Connection Pool
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# JWT Authentication
# ============================================
# Generate secrets with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# ============================================
# Socket.io Configuration
# ============================================
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ============================================
# API URLs
# ============================================
API_URL=http://localhost:5000
CUSTOMER_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# ============================================
# Frontend Customer (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000
NEXT_PUBLIC_CUSTOMER_URL=http://localhost:3000

# ============================================
# Frontend Admin (Vite)
# ============================================
VITE_API_URL=http://localhost:5000/api/v1
VITE_SOCKET_URL=http://localhost:5000
VITE_ADMIN_URL=http://localhost:3001

# ============================================
# Payment Gateway - VNPay
# ============================================
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_SECRET_KEY=your_vnpay_secret_key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/payment/callback
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction

# ============================================
# Payment Gateway - MoMo
# ============================================
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_API_URL=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_RETURN_URL=http://localhost:3000/payment/callback
MOMO_NOTIFY_URL=http://localhost:5000/api/v1/payments/momo/notify

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@qrorder.com
SMTP_FROM_NAME=QR Order Platform

# ============================================
# SMS Configuration (Zalo ZNS)
# ============================================
ZALO_OA_ID=your_zalo_oa_id
ZALO_ACCESS_TOKEN=your_zalo_access_token
ZALO_API_URL=https://business.openapi.zalo.me

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# ============================================
# Analytics & Monitoring
# ============================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# ============================================
# Feature Flags
# ============================================
ENABLE_PAYMENT=true
ENABLE_NOTIFICATIONS=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_AI_RECOMMENDATIONS=false

# ============================================
# Production Overrides
# ============================================
# Uncomment and update for production
# NODE_ENV=production
# DB_HOST=your_production_db_host
# DB_PASSWORD=your_secure_production_password
# REDIS_PASSWORD=your_secure_redis_password
# JWT_SECRET=your_production_jwt_secret
# API_URL=https://api.yourdomain.com
# CUSTOMER_URL=https://yourdomain.com
# ADMIN_URL=https://admin.yourdomain.com

